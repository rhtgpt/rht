-- Which LOB columns/parts are in 04/07?
SELECT l.owner, l.table_name, l.column_name,
       s.segment_type, s.segment_name, s.partition_name, s.tablespace_name,
       ROUND(s.bytes/1024/1024,2) AS size_mb
FROM   dba_lobs l
JOIN   dba_segments s
       ON s.owner = l.owner
      AND s.segment_name = l.segment_name        -- maps SYS_LOB... to the column
WHERE  l.owner = 'GD'
  AND  l.table_name = 'CIM_OFM_SMG6_LOGGING'
  AND  s.tablespace_name IN ('GD_LOB_04','GD_LOB_07')
ORDER BY size_mb DESC;
