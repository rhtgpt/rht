-- All constraints (PK, UK, CK, FK) on the table
SELECT constraint_name,
       constraint_type,   -- P=Primary, U=Unique, C=Check, R=FK
       status,
       search_condition,
       r_constraint_name  -- for FKs, shows referenced constraint
FROM   dba_constraints
WHERE  table_name  = 'CIM_OFM_SMG3_LOGGING'
AND    owner       = 'GD';


-- All indexes on the table
SELECT i.index_name,
       i.uniqueness,
       c.column_name,
       c.column_position
FROM   dba_indexes i
JOIN   dba_ind_columns c
       ON i.index_name = c.index_name
      AND i.owner      = c.index_owner
WHERE  i.table_name = 'CIM_OFM_SMG3_LOGGING'
AND    i.table_owner = 'GD'
ORDER BY i.index_name, c.column_position;


-- Privileges granted on this table
SELECT grantee,
       privilege,
       grantable
FROM   dba_tab_privs
WHERE  table_name = 'CIM_OFM_SMG3_LOGGING'
AND    owner      = 'GD';
